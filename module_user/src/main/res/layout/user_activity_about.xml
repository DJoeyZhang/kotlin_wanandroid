<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        tools:context=".ui.activity.AboutActivity">

    <ImageView
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/ivQR"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/CenterHorizontal"
            android:src="@mipmap/user_qr"
            android:layout_width="128dp"
            app:layout_constraintBottom_toTopOf="@+id/tvVersion"
            android:layout_height="128dp"/>

    <TextView
            android:text="1.0"
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/text_black"
            app:layout_constraintTop_toBottomOf="@id/ivQR"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_"
            style="@style/CenterHorizontal"
            android:id="@+id/tvVersion"/>

    <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="48dp"
            android:id="@+id/tv_"
            app:layout_constraintTop_toBottomOf="@id/tvVersion"
            android:text="下載地址"
            app:layout_constraintBottom_toTopOf="@+id/tvDownloadLink"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/tv_"
            android:id="@+id/tvDownloadLink"
            android:text="@string/app_download_link"
            app:layout_constraintBottom_toTopOf="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/text_black"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tvProjectLink"
            app:layout_constraintTop_toBottomOf="@id/tvDownloadLink"
            android:id="@+id/tv_1"
            android:text="項目鏈接"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            android:id="@+id/tvProjectLink"
            android:text="@string/app_project_link"
            app:layout_constraintBottom_toTopOf="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvProjectLink"
            android:id="@+id/tv_2"
            android:text="聯繫方式"
            app:layout_constraintBottom_toTopOf="@+id/tvEmail"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/tv_2"
            android:id="@+id/tvEmail"
            android:text="@string/app_email"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>